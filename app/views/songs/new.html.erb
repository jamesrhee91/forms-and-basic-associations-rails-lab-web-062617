<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>
  <%= f.label :note_contents %><br>
  <%= f.text_field :note_contents, name: "song[note_contents][]", id: "song_notes_1" %><br>
  <%= f.label :note_contents %><br>
  <%= f.text_field :note_contents, name: "song[note_contents][]", id: "song_notes_2" %><br>
  <%= f.label :genre_id %><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>

  <%= f.submit %>
<% end %>
